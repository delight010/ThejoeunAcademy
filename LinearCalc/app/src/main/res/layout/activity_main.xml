<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0000ff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123,456,789"
            android:textSize="50dp"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:textStyle="italic"
            android:layout_gravity="end"
            android:paddingVertical="90dp"/>
    </LinearLayout>

    //1행
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/ce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CE"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:backgroundTint="#c0c0c0"
            android:width="80dp"
            android:height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:backgroundTint="#c0c0c0"
            android:width="80dp"
            android:height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/DEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEL"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:backgroundTint="#c0c0c0"
            android:width="80dp"
            android:height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/POW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POW"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:backgroundTint="#c0c0c0"
            android:width="80dp"
            android:height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    //2행
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:backgroundTint="#c0c0c0"
            android:width="80dp"
            android:height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:backgroundTint="#c0c0c0"
            android:width="80dp"
            android:height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:backgroundTint="#c0c0c0"
            android:width="80dp"
            android:height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/btnPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:backgroundTint="#c0c0c0"
            android:width="80dp"
            android:height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    //3행
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:backgroundTint="#c0c0c0"
            android:width="80dp"
            android:height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:backgroundTint="#c0c0c0"
            android:width="80dp"
            android:height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:backgroundTint="#c0c0c0"
            android:width="80dp"
            android:height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/btnSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:backgroundTint="#c0c0c0"
            android:width="80dp"
            android:height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    //4행
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:backgroundTint="#c0c0c0"
            android:width="80dp"
            android:height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:backgroundTint="#c0c0c0"
            android:width="80dp"
            android:height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:backgroundTint="#c0c0c0"
            android:width="80dp"
            android:height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/btnMul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:backgroundTint="#c0c0c0"
            android:width="80dp"
            android:height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    //5행
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:backgroundTint="#c0c0c0"
            android:width="80dp"
            android:height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/btnPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="17dp"
            android:textColor="@color/black"
            android:backgroundTint="#c0c0c0"
            android:width="80dp"
            android:height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/btnResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="17dp"
            android:textColor="@color/black"
            android:backgroundTint="#c0c0c0"
            android:width="80dp"
            android:height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/btnDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:backgroundTint="#c0c0c0"
            android:width="80dp"
            android:height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>



</LinearLayout>