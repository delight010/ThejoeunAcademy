<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주민 명부"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="#1ac8b9"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        />

        <Button
            android:id="@+id/main_btn_listView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="목록보러 가기"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="#76CF94"
            />

        <Button
            android:id="@+id/main_btn_insert"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="추가하러 가기"
            android:textStyle="bold"
            android:textSize="20dp"
            android:backgroundTint="#B0E3E8"
            android:layout_gravity="right"

            />
    <Button
        android:id="@+id/main_btn_normal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="이용해주셔서 \n감사합니다"
        android:textSize="20dp"
        android:textStyle="bold"
        android:backgroundTint="#76CF94"
        />


</LinearLayout>